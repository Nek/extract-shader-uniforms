{
  "name": "extract-shader-uniforms",
  "version": "0.3.0",
  "author": {
    "name": "Nikita Anatolievich Dudnikov",
    "email": "nikdudnik@gmail.com",
    "url": "https://github.com/Nek"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nek/extract-shader-uniforms.git"
  },
  "type": "commonjs",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "dev": "vite --host",
    "prebuild": "rm -rf dist/*",
    "build": "tsc && vite build",
    "build:glsl-grammar": "cd node_modules/tree-sitter-glsl && npx tree-sitter-cli build --wasm && mv tree-sitter-glsl.wasm ../../dist",
    "postbuild": "npm run build:glsl-grammar",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "prettier . --write",
    "upgrade": "upgradeps",
    "release": "npm run build && np"
  },
  "bugs": {
    "url": "https://github.com/Nek/extract-shader-uniforms/issues"
  },
  "description": "Extract shader uniforms as JS object and TS types from a GLSL shader code.",
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md",
    "src",
    "package.json"
  ],
  "homepage": "https://github.com/Nek/extract-shader-uniforms#readme",
  "keywords": [
    "webgl",
    "glsl",
    "shader",
    "utility"
  ],
  "license": "MIT",
  "private": false,
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "typings": "./dist/index.d.ts",
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.6",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "np": "^10.2.0",
    "prettier": "^3.5.2",
    "terser": "^5.39.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "upgradeps": "^2.0.7",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vitest": "^3.0.6"
  },
  "dependencies": {
    "@shaderfrog/glsl-parser": "^5.4.1"
  }
}
